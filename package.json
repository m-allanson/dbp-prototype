{
  "name": "dbp-prototype",
  "version": "0.0.1",
  "description": "DbP tech prototype",
  "main": "server/index.js",
  "scripts": {
    "compile": "npm-run-all compile:*",
    "compile:css": "postcss --config postcss.json",
    "compile:js": "browserify -v --transform [babelify] client/main.js -o static/bundle.js",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint './components/**/*.css' './css/*'",
    "lint:js": "eslint --cache .",
    "start": "npm run compile && NODE_ENV=production node server/index.js",
    "start:dev": "PORT=8080 NODE_ENV=development nodemon --watch components --watch server --watch routes server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel watch:* ",
    "watch:css": "nodemon --watch components --ext css --exec \"npm run compile:css\"",
    "watch:js": "watchify -v --transform [babelify] client/main.js -o static/bundle.js"
  },
  "engines": {
    "node": "5.3.0",
    "npm": "3.3.12"
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "autoprefixer": "^6.2.1",
    "babel-cli": "^6.2.0",
    "babel-polyfill": "^6.3.13",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-2": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "express": "^4.13.3",
    "express-handlebars": "^2.0.1",
    "history": "^1.17.0",
    "normalize.css": "^3.0.3",
    "npm-run-all": "^1.4.0",
    "postcss": "^5.0.13",
    "postcss-cli": "^2.3.3",
    "postcss-custom-media": "^5.0.0",
    "postcss-custom-properties": "^5.0.0",
    "postcss-import": "^7.1.3",
    "postcss-media-minmax": "^2.1.1",
    "postcss-reporter": "^1.3.0",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-router": "^1.0.3",
    "stylelint": "^3.1.4",
    "stylelint-config-suitcss": "^2.0.0",
    "stylelint-selector-bem-pattern": "^0.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "eslint-config-standard": "^4.4.0",
    "eslint-config-standard-react": "^1.2.1",
    "eslint-plugin-react": "^3.11.2",
    "eslint-plugin-standard": "^1.3.1",
    "eslint": "^1.10.3",
    "nodemon": "^1.8.1",
    "watchify": "^3.6.1"
  }
}
